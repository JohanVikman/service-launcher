<?xml version="1.0" encoding="UTF-8"?>
<module name="l2vpn"
        xmlns="urn:ietf:params:xml:ns:yang:yin:1"
        xmlns:l2vpn="http://com/example/l2vpn"
        xmlns:inet="urn:ietf:params:xml:ns:yang:ietf-inet-types">
  <namespace uri="http://com/example/l2vpn"/>
  <prefix value="l2vpn"/>
  <import module="ietf-inet-types">
    <prefix value="inet"/>
  </import>
  <import module="tailf-ncs">
    <prefix value="ncs"/>
  </import>
  <import module="tailf-common">
    <prefix value="tailf"/>
  </import>
  <augment target-node="/ncs:services">
    <list name="l2vpn">
      <key value="name"/>
      <unique tag="pw-id"/>
      <uses name="ncs:service-data"/>
      <ncs:servicepoint/>
      <leaf name="name">
        <tailf:info/>
        <type name="string"/>
      </leaf>
      <leaf name="pw-id">
        <tailf:info/>
        <mandatory value="true"/>
        <type name="uint32">
          <range value="1..4294967295"/>
        </type>
      </leaf>
      <leaf name="device1">
        <tailf:info/>
        <mandatory value="true"/>
        <type name="leafref">
          <path value="/ncs:devices/ncs:device/ncs:name"/>
        </type>
      </leaf>
      <leaf name="intf-number1">
        <tailf:info/>
        <mandatory value="true"/>
        <type name="string">
          <pattern value="[0-9]{1,2}(/[0-9]{1,2}){1,4}"/>
        </type>
      </leaf>
      <leaf name="remote-ip1">
        <tailf:info/>
        <mandatory value="true"/>
        <type name="inet:ipv4-address">
          <pattern value="10\.0\.0\.[0-9]+"/>
        </type>
      </leaf>
      <leaf name="device2">
        <tailf:info/>
        <mandatory value="true"/>
        <type name="leafref">
          <path value="/ncs:devices/ncs:device/ncs:name"/>
        </type>
      </leaf>
      <leaf name="intf-number2">
        <tailf:info/>
        <mandatory value="true"/>
        <type name="string">
          <pattern value="[0-9]{1,2}(/[0-9]{1,2}){1,4}"/>
        </type>
      </leaf>
      <leaf name="remote-ip2">
        <tailf:info/>
        <mandatory value="true"/>
        <type name="inet:ipv4-address">
          <pattern value="10\.0\.0\.[0-9]+"/>
        </type>
      </leaf>
      <tailf:callpoint>
        <tailf:transaction-hook>
          <tailf:invocation-mode/>
        </tailf:transaction-hook>
      </tailf:callpoint>
    </list>
  </augment>
</module>
